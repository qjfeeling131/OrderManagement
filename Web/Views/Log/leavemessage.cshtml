@{
    Layout = "~/Views/Template/dialog.cshtml";
}

@model OrderManager.Model.Models.OM_User

@section title {
    <h4 style="font-weight:bold"><label>一些建议</label></h4>
}

@section Message{

    <!-- form start -->
    <form role="form" id="form_modifyPwd">
        <input hidden="hidden" value="guid" name="UserGuid" />
        <div class="box-body">
            <div style="margin-bottom:15px;">
                <label>用户名</label>
                <p>@Model.Account</p>
                <input type="hidden" name="UserGuid" value="@Model.Guid" />
            </div>

            <div class="form-group">
                <label for="newPwd">邮箱</label>
                <input type="password" class="form-control" name="newPwd" id="newPwd" placeholder="你的邮箱" required>
            </div>
            <div class="form-group">
                <label for="newPwd">联系电话</label>
                <input type="password" class="form-control" name="newPwd" id="newPwd" placeholder="电话号码" required>
            </div>
            <div class="form-group">
                <label for="confirmPwd">标题</label>
                <input type="password" class="form-control" name="confirmPwd" id="confirmPwd" placeholder="留言主题" required>
            </div>

            <div class="form-group">
                <label for="confirmPwd">留言</label>
                <textarea class="form-control" rows="3" placeholder="输入留言 ..."></textarea>
            </div>
        </div>
    </form>

}

@section buttons{
    <button id="confirm" type="button" class="btn btn-primary" data-dismiss="modal" onclick="">确定</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
    <script>
        $(function () {
            $('#confirm').click(function () {


                getAsynData("resetPassword", $("#form_modifyPwd").serialize(), function (json) {
                    alertInfo("提示", "修改成功");
                    $("#confirmPwd").val('');
                    $("#newPwd").val('');
                });
            });
        })
    </script>
}

